<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="279dp"
        android:layout_height="26dp"
        android:layout_below="@+id/analysisTable"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="53dp"
        android:text="(scroll down to view more table names) "
        android:textAlignment="center"
        android:textColor="#8F000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.998" />

    <EditText
        android:id="@+id/editTextEnterNumber"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/analysisTable"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:hint="Enter a Number"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/enterNumber"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analysisTable"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="257dp"
        android:text="Table Number:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent" />

    <de.codecrafters.tableview.TableView
        android:id="@+id/analysisTable"
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:baselineAligned="true" />

    <Button
        android:id="@+id/viewData"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analysisTable"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#D2C5EA"
        android:text="View Data"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>